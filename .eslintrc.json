{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "google",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "eslint-plugin-tsdoc"],
  "rules": {
    "tsdoc/syntax": "warn",
    "valid-jsdoc": "off",
    "require-jsdoc": "off",
    "prettier/prettier": "warn"
  },
  "ignorePatterns": "dist"
}
